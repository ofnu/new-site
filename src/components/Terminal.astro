---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="terminal-container">
  <div class="terminal-header">
    <span class="terminal-title">{title}</span>
  </div>
  <div class="terminal-content">
    <slot />
  </div>
</div>

<style>
  .terminal-container {
    width: 80%;
    max-width: 600px;
    border: 1px solid white;
    background: #121314;
  }

  .terminal-header {
    border-bottom: 1px solid white;
    padding: 0.5rem;
  }

  .terminal-title {
    font-size: 0.9rem;
    opacity: 0.8;
  }

  .terminal-content {
    padding: 1rem;
  }
</style>
