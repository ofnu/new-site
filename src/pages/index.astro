---
import Layout from '../layouts/Layout.astro';
import LoadingScreen from '../components/LoadingScreen.astro';
import ContextManager from '../components/ContextManager.astro';
import CallingCard from '../components/CallingCard.astro';
---

<Layout title="noahzoarski.net">
  <LoadingScreen />
  <ContextManager>
    <main>
      <CallingCard title="~/about-me">
        <div class="command-line">
          <span class="blue">$</span> 
          <span class="command">whoami</span>
        </div>
        <div class="output">
          Noah Zoarski <br>
          Programmer | Teaching Assistant | Cybersecurity Enthusiast 
        </div>
        
        <div class="command-line">
          <span class="blue">$</span> 
          <span class="command">cat contact.txt</span>
        </div>
        <div class="output">
          <a href="https://github.com/ofnu" target="_blank" class="link">github.com/ofnu ðŸ”—</a> <br>
          <a href="https://linkedin.com/in/noah-zoarski" target="_blank" class="link">linkedin.com/in/noah-zoarski ðŸ”—</a> <br>
        </div>
      </CallingCard>
    </main>
  </ContextManager>
</Layout>

<style>
  main {
    margin: 0;
    padding: 0;
    background-color: var(--bg-primary);
    color: var(--text-primary);
    font-family: var(--font-mono);
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
  }

  :global(.link) {
    color: var(--link-color);
    text-decoration: none;
    transition: text-decoration var(--transition-fast);
  }

  :global(.link:hover) {
    text-decoration: underline;
  }
</style>